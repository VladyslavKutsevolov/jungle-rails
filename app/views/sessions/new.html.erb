<h1>Login</h1>
      <%= form_for :sessions do |form| %>
        <p class="error">
        <%= flash[:error] %>
        </p>

      <p>
        <%= form.label :email %>
        <%= form.email_field :email, :class => "form-control" %>
      </p>
      <p>
        <%= form.label :password %>
        <%= form.password_field :password, :class => "form-control" %>
      </p>
      <p>
        <%= submit_tag "LogIn", class: 'btn btn-primary' %>
      </p>
<% end %>